# Create a variable that calculates a monthly payment (no interest) for 5yr/60months for the first vehicle
monthly_payment = {f'{option0}{'is $5,899 yearly for 5 years or $491.59 monthly for 60 months.'}'}

# and print that in a nice, kind message. Don't be rude/pushy to the customer :)
message = {f'{'Customer, the monthly payment estimate for the'}{monthly_payment}'}
print (message)
# Do the same thing, but give them 4yr and 6yr options for the same vehicle
monthly_payment2 = {f'{option0}{'is $7,373.35 yearly for 4 years or $614.48 monthly for 48 months.'}'}
monthly_payment3 = {f'{option0}{'is 4,915.84 yearly for 6 years or $409.65 monthly for 72 months.'}'}
