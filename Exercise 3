# 5-10
current_users = ['cyber-kid', 'script-child', 'linux-beast', 'python-man', 'blue-man-group']
new_users = ['lone-ranger', 'python-man', 'muscle-man', 'hulk-hogan', 'tiger-hoods']
for new_users in new_users:
    if new_users in current_users:
      print('Sorry, you need to create a new username.')
    else:
      print('Username created. Welcome!')

# 5-11
digits = list(range(1, 10))
for digit in digits:
    if digit == 1:
        print('1st')
    elif digit == 2:
        print('2nd')
    elif digit == 3:
        print('3rd')
    elif digit == 4:
        print('4th')
    elif digit == 5:
        print('5th')
    elif digit == 6:
        print('6th')
    elif digit == 7:
        print('7th')
    elif digit == 8:
        print('8th')
    elif digit == 9:
        print('9th')
    else:
        print('Number is not in the list.')

